<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.cfcs.ehrmsone.Main.AddandEditTraningActivity"
    tools:showIn="@layout/activity_addand_edit_traning">

    <LinearLayout
        android:id="@+id/mainlay"

        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/add_new_traning">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domain"
                android:textSize="16sp"
                android:textColor="@color/purple700"/>

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/domainspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linebelowedittext"
                android:backgroundTint="@color/purple700"
                android:hint="Start Date"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/purple500"
                android:textColorHint="@color/purple700"
                android:textSize="16dp"
                android:theme="@style/MyEditText" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linebelowedittext"
                android:backgroundTint="@color/purple700"
                android:hint="End Date"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/purple500"
                android:textColorHint="@color/purple700"
                android:textSize="16dp"
                android:theme="@style/MyEditText" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cal"/>

        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textSize="16sp"
                android:textColor="@color/purple700"/>

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/coursespinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textSize="16sp"
                android:textColor="@color/purple700"/>

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/priorityspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proficiency"
                android:textSize="16sp"
                android:textColor="@color/purple700"/>

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/proficiencyspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="#0D47A1"
            app:hintTextAppearance="@style/TextAppearenceWith.App.TextInputLayout">

            <EditText
                android:id="@+id/confirmpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linebelowedittext"
                android:backgroundTint="@color/purple700"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/purple500"
                android:textColorHint="@color/purple700"
                android:textSize="16dp"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/add_new_traning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/purple700"
        android:textColor="@color/white"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/mainlay"
        android:layout_height="wrap_content"
        android:text="Add New Training"/>



</android.support.constraint.ConstraintLayout>
