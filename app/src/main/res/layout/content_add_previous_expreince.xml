<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.co.cfcs.ehrmsone.Main.AddPreviousExpreinceActivity"
    tools:showIn="@layout/activity_add_previous_expreince">

    <LinearLayout
        android:id="@+id/mainlay"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/newrequestbtn">

        <ScrollView
            android:layout_above="@+id/editprofilebtn"
            android:id="@+id/main_scrolled_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textColor="@color/purple700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/compName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="4"
                        android:background="@drawable/spinner_background"
                        android:drawablePadding="10dp"
                        android:hint="Company Name"
                        android:padding="10dp"
                        android:textColor="@color/purple700"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="14sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joining Date"
                    android:textColor="@color/purple700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/joinongdatetxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textColor="@color/purple700"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="14sp"
                        android:background="@drawable/spinner_background"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_cal"
                        android:editable="false"
                        android:hint="Joining Date"
                        android:padding="10dp"
                        android:layout_marginLeft="2dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reliving Date"
                    android:textColor="@color/purple700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/releavingdatetxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textColor="@color/purple700"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="14sp"
                        android:background="@drawable/spinner_background"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_cal"
                        android:editable="false"
                        android:hint="Reliving Date"
                        android:padding="10dp"
                        android:layout_marginLeft="2dp"/>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desigantion"
                    android:textColor="@color/purple700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/designation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="4"
                        android:background="@drawable/spinner_background"
                        android:drawablePadding="10dp"
                        android:hint="Desigantion"
                        android:padding="10dp"
                        android:textColor="@color/purple700"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Periode"
                        android:textSize="16sp"
                        android:textColor="@color/status_color"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/purple700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Year"/>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight=".28"
                                android:background="@drawable/spinner_background"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/yearspinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ic_arrow" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/purple700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Month"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight=".28"
                                android:background="@drawable/spinner_background"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/monthspinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ic_arrow" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Description"
                        android:textColor="@color/purple700"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/jobdesc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"
                            android:layout_weight="4"
                            android:background="@drawable/spinner_background"
                            android:drawablePadding="10dp"
                            android:hint="Job Description"
                            android:inputType="textMultiLine"
                            android:padding="10dp"
                            android:textColor="@color/purple700"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="14sp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainlay"
        android:id="@+id/newrequestbtn"
        android:background="@color/purple700"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Previous Experience"/>

</android.support.constraint.ConstraintLayout>
